<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FastTestBlLayput" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>

        <item name="android:padding">8dp</item>
        <item name="bl_arrowHeight">16dp</item>
        <item name="bl_arrowWidth">8dp</item>
        <item name="bl_cornersRadius">10dp</item>
        <item name="bl_strokeWidth">2dp</item>
        <item name="bl_arrowPosition">0dp</item>
    </style>

    <style name="FastTestBlContent" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

</resources>
